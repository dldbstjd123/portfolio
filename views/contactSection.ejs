<div id='contactSection'>
    <div id='contactHeader'>CONTACT</div>
    <div id='contactContainer'>
        <div id='contactContainerHead'>Feel free to contact me!</div>
        <form id='contactForm'>
            <div class='inputContainer'>
                <input type="text" name="name" required onfocus="inputClicked(0)" onfocusout="inputOut(0)">
                <label class="contactLabel" onclick="inputClicked(0)">Name</label>
                <div class='contactBar'><div class='contactBar2'></div></div>
            </div>
            <div class='inputContainer'>
                <input type="text" name="email" required onfocus="inputClicked(1)" onfocusout="inputOut(1)">
                <label class="contactLabel" onclick="inputClicked(1)">Email</label>
                <div class='contactBar'><div class='contactBar2'></div></div>
            </div>
            <div class='inputContainer'>
                <textarea name="message" type="text" rows="10" onfocus="inputClicked(2)" onfocusout="inputOut(2)"></textarea>
                <label class="contactLabel" onclick="inputClicked(2)">Message</label>
                <div class='contactBar'><div class='contactBar2'></div></div>
            </div>
            <div id="contactFormAfterSubmit"></div>
            <div id='contactFormSendContainer'><input id="contactFormSend" type="button" value="SEND" onclick="validateForm()"></div>
        </form>
    </div>
</div>